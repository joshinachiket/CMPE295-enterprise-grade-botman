<body ng-app="header">
    <div class="landing-header-dropdown">
        <div class="header-limiter">
            <div class="logo-container">
                <img class="botman-logo" src="/images/assets/bot_logo.png" alt="Logo"/>
            </div>
            <h1><a href="#">Botman</a></h1>
            <nav>
                <a href="#">Home</a>
                <a href="#">Overview</a>
                <a href="#">Developer</a>
                <a href="#">Dashboard <span>new</span></a>
            </nav>
            <div class="landing-header-menu">
                <img src="https://avatars.githubusercontent.com/shettyaditi" alt="User Image"/>
                <ul>
                    <li><a href="#">Settings</a></li>
                    <li><a href="#">Payments</a></li>
                    <li>        
                        <form action="logout" method="post">
                            <button class="logout-button" ng-click="logout()">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
         </div>
    </div>

    <script>
        $(document).ready(function(){
            var userMenu = $('.landing-header-dropdown .landing-header-menu');
            userMenu.on('touchend', function(e){
                userMenu.addClass('show');
                e.preventDefault();
                e.stopPropagation();
            });

            // This code makes the user dropdown work on mobile devices
            $(document).on('touchend', function(e){
                // If the page is touched anywhere outside the user menu, close it
                userMenu.removeClass('show');
            });
        });
    </script>
</body>

